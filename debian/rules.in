#!/usr/bin/make -f
override_dh_auto_configure:
	dh_auto_configure -- --prefix=/opt/monodevelop-%SNAPVER% --sysconfdir=/opt/monodevelop-%SNAPVER%/etc

override_dh_auto_clean:
	rm -f monodevelop_version
	rm -rf debian/mytmp/
	dh_auto_clean

override_dh_auto_build:
	mkdir -p debian/mytmp/
	XDG_CONFIG_HOME=debian/mytmp/ mozroots --import --sync
	XDG_CONFIG_HOME=debian/mytmp/ dh_auto_build

%:
	dh $@
